<%- include ('partials/_header') %>

<div class="container mt-4">
 <div class="row mt-2">
    <h1>Customer Table</h1>
    <div class="col-md-7 col-lg-7 mt-2">
      
      <table class="table table-bordered table-hover">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Address</th>
                  <th>Phone</th>
                  <th>Actions</th>
              </tr>
          </thead>
          
          <tbody>
               
               <% if(data){%>

                <% for(var i=0; i < data.length; i++) {%> 
                       
                    <tr>
                       <th><pre><%= data[i].id %></pre> </th>
                       <th><pre><%= data[i].name %></pre> </th>
                       <th><pre><%= data[i].address %></pre> </th>
                       <th><pre><%= data[i].phone %></pre> </th>
                       <th>
                           <a href="/edit/<%= data[i].id%>" class="btn btn-info">Edit</a>
                           <a href="/delete/<%= data[i].id%>" class="btn btn-danger">Delete</a>
                        </th>
                    </tr>

                    <%}%>
                    <%}%>
          </tbody>

      </table>
    </div>
    <div class="col-md-5 col-lg-5 mt-2">
        <h2>Add Customer</h2>
        <div class="card">
            <div class="card-body">
                <form action="/add" method="post">
                    <div class="form-group mt-2">
                        <input type="text" name="name" value="" placeholder="Name" class="form-control" required>
                    </div>
        
                    <div class="form-group mt-2">
                        <input type="text" name="address" value="" placeholder="Adress" class="form-control" required>
                    </div>
        
                    <div class="form-group mt-2">
                        <input type="number" name="phone" value="" placeholder="Phone" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Save Customer</button>
                    </form>
            </div>
        </div>
    </div>
 </div>
    

</div>
<%- include ('partials/_footer') %>


